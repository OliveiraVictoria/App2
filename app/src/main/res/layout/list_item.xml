<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andrsoid="http://schemas.android.com/tools">

    <ImageView
    android:id="@+id/contactImage"
    android:layout_width="60dp"
    android:layout_height="50dp"
    android:src="@drawable/golden" />

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="68dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/golden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="italic"
            andrsoid:text="GOLDEN: O DEBUT MAIS BRILHANTE DO KPOP" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="42dp"
            android:text="GOLDEN, primeiro LP solo do JK, foi lançado hoje (3) e já está disponível na íntegra."
            android:textSize="10sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>